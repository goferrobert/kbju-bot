{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Deploy to Fly.io",
            "type": "shell",
            "command": "flyctl deploy",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Run Dev Bot",
            "type": "shell",
            "command": "python",
            "args": [
                "bot.py"
            ],
            "options": {
                "cwd": "${workspaceFolder}",
                "envFile": "${workspaceFolder}/.env"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}